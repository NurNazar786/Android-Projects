<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="6dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:backgroundTint="@color/white"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="160.00dp"
                android:padding="10.00dp"
                app:iss_auto_cycle="false"
                app:iss_text_align="CENTER" />
<!--            <ImageView-->
<!--                android:id="@+id/productPic"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="170dp"-->
<!--                android:padding="10dp"-->
<!--                android:contentDescription="@string/product_img"-->
<!--                android:scaleType="fitCenter"-->

<!--                android:src="@drawable/icon" />-->

            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/orange"
                android:paddingStart="8dp"
                android:paddingTop="3dp"
                android:textColor="@color/black"
                android:text="@string/app_name"
                android:textSize="17sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:ignore="RtlSymmetry" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/orange"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/productPrice"
                   android:layout_width="100.00dp"
                   android:layout_height="30dp"
                   android:layout_marginBottom="10.00dp"
                   android:textColor="@color/primary"
                   android:paddingStart="8dp"
                   android:paddingTop="3dp"
                   android:text="@string/name"
                   android:textSize="16sp"
                   tools:ignore="RtlSymmetry" />

               <TextView
                   android:id="@+id/productEdit"
                   android:layout_width="70.00dp"
                   android:layout_height="30dp"
                   android:layout_marginBottom="10.00dp"
                   android:layout_marginStart="2.00dp"
                  android:padding="4dp"
                   android:background="@drawable/bg_textbox"
                   android:text="@string/edit"
                   android:textSize="16sp"
                   android:gravity="center"
                   android:textColor="@color/reg_color"
                   tools:ignore="RtlSymmetry" />
           </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>