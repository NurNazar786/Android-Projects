<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg"
    tools:context=".fragments.OrderConfirmFragment">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1.3dp"
        android:background="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.00dp"
        android:layout_marginHorizontal="5.00dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="8.00dp"
        android:elevation="0dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/bg_card"
            android:orientation="horizontal"
            android:padding="10.00dp">

            <ImageView
                android:id="@+id/status0"
                android:padding="@dimen/_5sdp"
                android:layout_gravity="center"
                android:layout_width="45.00dp"
                android:layout_height="45.00dp"
                android:background="@drawable/bg_circle_shape"
                android:src="@drawable/order_icon"
                app:tint="#DDDDDD"
                android:contentDescription="@string/name" />
            <View
                android:id="@+id/view1"
                android:layout_width="52.00dp"
                android:layout_height="5.20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/grey"/>

            <ImageView
                android:id="@+id/status1"
                android:padding="@dimen/_5sdp"
                android:layout_gravity="center"
                android:layout_width="45.00dp"
                android:layout_height="45.00dp"
                android:background="@drawable/bg_circle_shape"
                android:src="@drawable/bag"
                app:tint="#DDDDDD"
                android:contentDescription="@string/name" />
            <View
                android:id="@+id/view2"
                android:layout_width="52.00dp"
                android:layout_height="5.20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/grey"/>

            <ImageView
                android:id="@+id/status2"
                android:padding="@dimen/_5sdp"
                android:layout_gravity="center"
                android:layout_width="45.00dp"
                android:layout_height="45.00dp"
                android:background="@drawable/bg_circle_shape"
                android:src="@drawable/van"
                app:tint="#DDDDDD"
                android:contentDescription="@string/name" />
            <View
                android:id="@+id/view3"
                android:layout_width="52.00dp"
                android:layout_height="5.20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/grey"/>

            <ImageView
                android:id="@+id/status3"
                android:padding="@dimen/_5sdp"
                android:layout_gravity="center"
                android:layout_width="45.00dp"
                android:layout_height="45.00dp"
                android:background="@drawable/bg_circle_shape"
                android:src="@drawable/done"
                app:tint="#DDDDDD"
                android:contentDescription="@string/name" />




        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10.00dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5.00dp"
                android:layout_marginTop="10.00dp"
                android:backgroundTint="@color/white"
                android:elevation="0dp"
                app:cardCornerRadius="8.00dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <TextView
                            android:layout_width="105.00dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15.00dp"
                            android:layout_marginTop="10.00dp"
                            android:paddingStart="10.00dp"
                            android:textColor="@color/grey"
                            android:textSize="16sp"
                            android:text="@string/order_id"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/orderId"
                            android:layout_width="240.00dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5.00dp"
                            android:layout_marginTop="10.00dp"
                            android:layout_marginEnd="10.00dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/num"
                            android:textColor="@color/grey"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <TextView
                            android:layout_width="105.00dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15.00dp"
                            android:layout_marginTop="4.00dp"
                            android:layout_marginBottom="10.00dp"
                            android:paddingStart="10.00dp"
                            android:text="@string/order_date"
                            tools:ignore="RtlSymmetry"
                            android:textColor="@color/grey"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@id/orderDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5.00dp"
                            android:layout_marginTop="4.00dp"
                            android:layout_marginBottom="10.00dp"
                            android:text="@string/num"
                            android:textColor="@color/grey"
                            android:textSize="16sp" />

                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5.00dp"
                android:layout_marginTop="5.00dp"
                android:backgroundTint="@color/white"
                android:elevation="0dp"
                app:cardCornerRadius="8.00dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/orderStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15.00dp"
                        android:layout_marginVertical="5.00dp"
                        android:paddingVertical="4.00dp"
                        android:paddingStart="10.00dp"
                        android:text="@string/order_status"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.00dp"
                        android:background="@color/light_grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="100.00dp"
                            android:layout_height="90.00dp"
                            android:layout_marginHorizontal="15.00dp"
                            android:layout_marginVertical="15.00dp"
                            android:contentDescription="@string/name"
                            android:padding="4dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15.00dp"
                            android:layout_marginVertical="15.00dp"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/product_name"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/product_stock"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/qnt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/product_stock"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5.00dp"
                android:layout_marginTop="5.00dp"
                android:backgroundTint="@color/white"
                android:elevation="0dp"
                app:cardCornerRadius="8.00dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15.00dp"
                        android:layout_marginTop="10.00dp"
                        android:paddingStart="10.00dp"
                        android:paddingTop="2.00dp"
                        android:text="@string/payment"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15.00dp"
                        android:layout_marginTop="4.00dp"
                        android:layout_marginBottom="10.00dp"
                        android:paddingStart="10.00dp"
                        android:paddingBottom="2.00dp"
                        android:text="@string/phone_pe"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry"/>


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5.00dp"
                android:layout_marginTop="5.00dp"
                android:backgroundTint="@color/white"
                android:elevation="0dp"
                app:cardCornerRadius="8.00dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15.00dp"
                        android:layout_marginVertical="10.00dp"
                        android:paddingVertical="4.00dp"
                        android:paddingStart="10.00dp"
                        android:text="@string/shipping_adr"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.00dp"
                        android:background="@color/light_grey" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15.00dp"
                        android:layout_marginTop="15.00dp"
                        android:paddingStart="12.00dp"
                        android:text="@string/name"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry"/>

                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15.00dp"
                        android:layout_marginTop="3.00dp"
                        android:paddingStart="12.00dp"
                        android:text="@string/num"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry"/>

                    <TextView
                        android:id="@+id/colony"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15.00dp"
                        android:layout_marginTop="7.00dp"
                        android:paddingStart="7.00dp"
                        android:text="@string/colony"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry"/>

                    <TextView
                        android:id="@+id/area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15.00dp"
                        android:layout_marginTop="5.00dp"
                        android:paddingStart="10.00dp"
                        android:text="@string/area"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry"/>

                    <TextView
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15.00dp"
                        android:layout_marginTop="5.00dp"
                        android:paddingStart="10.00dp"
                        android:text="@string/city"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry"/>

                    <TextView
                        android:id="@+id/state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15.00dp"
                        android:layout_marginTop="5.00dp"
                        android:paddingStart="10.00dp"
                        android:text="@string/state"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15.00dp"
                        android:layout_marginTop="5.00dp"
                        android:layout_marginBottom="15.00dp"
                        android:paddingStart="10.00dp"
                        android:text="@string/country"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry"/>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5.00dp"
                android:layout_marginTop="5.00dp"
                android:layout_marginBottom="10.00dp"
                android:backgroundTint="@color/white"
                android:elevation="0dp"
                app:cardCornerRadius="8.00dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15.00dp"
                        android:layout_marginVertical="10.00dp"
                        android:paddingVertical="4.00dp"
                        android:paddingStart="10.00dp"
                        android:text="@string/price_detail"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.00dp"
                        android:background="@color/light_grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <TextView
                            android:layout_width="200.00dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15.00dp"
                            android:layout_marginTop="15.00dp"
                            android:paddingStart="10.00dp"
                            android:text="@string/price_selling"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            tools:ignore="RtlSymmetry"/>

                        <TextView
                            android:id="@+id/sellingPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15.00dp"
                            android:layout_marginTop="15.00dp"
                            android:paddingStart="10.00dp"
                            android:text="@string/price"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            tools:ignore="RtlSymmetry"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <TextView
                            android:layout_width="200.00dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15.00dp"
                            android:layout_marginTop="6.00dp"
                            android:paddingStart="10.00dp"
                            android:text="@string/price_discount"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            tools:ignore="RtlSymmetry"/>

                        <TextView
                            android:id="@+id/discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15.00dp"
                            android:layout_marginTop="6.00dp"
                            android:paddingStart="10.00dp"
                            android:text="@string/tax_percent"
                            android:textColor="@color/green"
                            android:textSize="16sp"
                            tools:ignore="RtlSymmetry"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <TextView
                            android:layout_width="200.00dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15.00dp"
                            android:layout_marginTop="6.00dp"
                            android:paddingStart="10.00dp"
                            android:text="@string/after_discount"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            tools:ignore="RtlSymmetry"/>

                        <TextView
                            android:id="@+id/afterDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15.00dp"
                            android:layout_marginTop="6.00dp"
                            android:paddingStart="10.00dp"
                            android:text="@string/price"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            tools:ignore="RtlSymmetry"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <TextView
                            android:layout_width="200.00dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15.00dp"
                            android:layout_marginTop="6.00dp"
                            android:paddingStart="10.00dp"
                            android:text="@string/tax"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            tools:ignore="RtlSymmetry"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15.00dp"
                            android:layout_marginTop="6.00dp"
                            android:paddingStart="10.00dp"
                            android:text="@string/tax_percent"
                            android:textColor="@color/red"
                            android:textSize="16sp"
                            tools:ignore="RtlSymmetry"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <TextView
                            android:layout_width="200.00dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15.00dp"
                            android:layout_marginTop="10.00dp"
                            android:layout_marginBottom="15.00dp"
                            android:paddingStart="10.00dp"
                            android:text="@string/order_total"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="RtlSymmetry"/>

                        <TextView
                            android:id="@+id/totalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15.00dp"
                            android:layout_marginTop="10.00dp"
                            android:paddingStart="10.00dp"
                            android:text="@string/price"
                            android:textColor="@color/red"
                            android:textSize="16sp"
                            tools:ignore="RtlSymmetry"/>

                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirmOrderBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25.00dp"
                android:layout_marginTop="10.00dp"
                android:layout_marginBottom="30.00dp"
                android:backgroundTint="@color/orange"
                android:text="@string/confirm_order"
                android:padding="6.00dp"
                android:textSize="@dimen/_19ssp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:cornerRadius="10.40dp"
                />

        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>